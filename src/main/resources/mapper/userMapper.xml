    <update id="deleteUsr" parameterType="map">
        UPDATE
            usr u
        INNER JOIN
            usr_hst uh
        ON
            u.usr_id = uh.usr_id
        SET
            u.cmn_cd_usr_stt = '2d',
            uh.cmn_cd_drp = #{cmn_cd_drp},
            uh.drp_date = now()
        WHERE
            uh.usr_id = #{usr_id}
    </update>

